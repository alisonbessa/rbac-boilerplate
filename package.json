{
  "name": "rbac-boilerplate",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:all": "turbo run dev --parallel",
    "lint": "eslint --max-warnings=0 --no-error-on-unmatched-pattern --ext .ts,.tsx packages apps",
    "typecheck": "turbo run typecheck",
    "build": "turbo run build",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "prepare": "husky install",
    "commitlint": "commitlint --config .commitlintrc.cjs",
    "gen:resource": "tsx scripts/gen/resource.ts",
    "gen:feature": "tsx scripts/gen/feature.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,scss,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "20",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "node-gyp": "^11.3.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "turbo": "^2.0.6",
    "typescript": "^5.5.4",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@fastify/cookie": "^10",
    "@fastify/cors": "^10",
    "@fastify/error": "^3.4.1",
    "@fastify/helmet": "^13",
    "@fastify/rate-limit": "^10",
    "argon2": "^0.41.1",
    "fastify": "^5",
    "fastify-plugin": "^4.5.1",
    "jsonwebtoken": "^9.0.2"
  }
}
